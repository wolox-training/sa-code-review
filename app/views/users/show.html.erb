<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Github</th>
      <th>City</th>
      <th>Temperature</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @user.email %></td>
      <td><%= @user.github_repository %></td>
      <td><%= @user.city %></td>
      <td id="temperature" data-temp=<%= weather_temperature_url(city: @user.city) %>></td>
    </tr>
  </tbody>
</table>

<h1>Repositories</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Stars</th>
      <th>Forks</th>
    </tr>
  </thead>

  <tbody id="repositories" data-repositories=<%= repositories_github_url(user: @user.github_repository) %>>
  </tbody>
</table>

<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @user.posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @user.id == current_user.id %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
